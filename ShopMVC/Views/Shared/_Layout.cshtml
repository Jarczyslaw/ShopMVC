@using ShopMVC.Helpers;

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@GetTitle()</title>
    <link rel="icon" href="@Url.Content(Links.Content.favicon_ico)" />

    @Styles.Render(Links.Bundles.Styles.Css)
    @RenderSection(Links.Sections.AdditionalStyles, false)
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="@Url.Content("~/")">Courses Shop</a>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @GetStaticPageLink(MVC.Home.Views.ViewNames.About)
                </li>
                <li class="nav-item">
                    @GetStaticPageLink(MVC.Home.Views.ViewNames.Help)
                </li>
                <li class="nav-item">
                    @GetStaticPageLink(MVC.Home.Views.ViewNames.Regulations)
                </li>
                <li class="nav-item">
                    @GetStaticPageLink(MVC.Home.Views.ViewNames.Contact)
                </li>
            </ul>
            <div class="my-2 my-lg-0 text-light">
                @Html.Action(MVC.ShoppingCart.Actions.GetCartLink())
            </div>
        </div>
    </nav>

    <main role="main">
        <div class="container bg-light" style="overflow: auto;">
            <div class="container" style="margin-top: 4rem;">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer>
        <div class="container footer bg-secondary text-white font-weight-bold text-center p-1">
            Copyright &copy; @DateTime.Now.Year - Courses Shop
        </div>
    </footer>

    @Scripts.Render(Links.Bundles.Scripts.Jquery)
    @Scripts.Render(Links.Bundles.Scripts.Bootstrap)
    @RenderSection(Links.Sections.AdditionalScripts, false)
</body>
</html>

@helper GetTitle()
{
    var title = "Courses Shop";
    if (!string.IsNullOrEmpty(ViewBag.Title))
    {
        title += " - " + ViewBag.Title;
    }
    @title
}

@helper GetStaticPageLink(string name)
{
    @Html.ActionLink(name, MVC.Home.Pages(name), new { @class = "nav-link" })
}