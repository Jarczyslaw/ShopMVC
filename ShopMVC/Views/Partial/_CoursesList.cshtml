@using ShopMVC.DataAccess.Models;

@model IEnumerable<Course>

@{
    if (Model.Count() > 0)
    {
        <ul>
            @foreach (var c in Model)
            {
                <li><a href="@Url.Action(MVC.Courses.Details(c.CourseId))">@c.Title</a> - @c.ShortDescription - <a href="@Url.Action(MVC.ShoppingCart.AddToCart(c.CourseId))">Add to cart</a></li>
            }
        </ul>
    }
    else
    {
        <p>No courses available here!</p>
    }
}
